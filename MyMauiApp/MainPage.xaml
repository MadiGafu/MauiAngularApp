<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.MainPage"
             Title="MAUI × Angular">

    <ContentPage.ToolbarItems>
        <ToolbarItem Text="Обновить" Clicked="OnRefreshClicked" />
    </ContentPage.ToolbarItems>

    <Grid RowDefinitions="Auto, *" Padding="16">
        <VerticalStackLayout Spacing="12">
            <Label Text="MAUI + Angular WebView" FontSize="20" />
            <Button Text="Отправить в Angular (notify)" Clicked="OnSendToAngularClicked" />
            <Grid>
                <ActivityIndicator x:Name="spinner" IsVisible="False" IsRunning="False"
                                   HorizontalOptions="Center" VerticalOptions="Center"/>
            </Grid>
        </VerticalStackLayout>

        <WebView x:Name="webView"
                 Grid.Row="1"
                 HeightRequest="600"
                 WidthRequest="800"
                 Source="http://localhost:4200"
                 Navigating="OnWebViewNavigating"
                 Navigated="OnWebViewNavigated" />
    </Grid>
</ContentPage>
