<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MyMauiApp.MainPage">

    <VerticalStackLayout Spacing="20" Padding="20">
        <Label Text="MAUI + Angular WebView "
               FontSize="20"
               HorizontalOptions="Center" />

        <Button Text="Отправить в Angular"
                Clicked="OnSendToAngularClicked" />

        <!-- Dev: грузим Angular dev-server -->
        <WebView x:Name="webView"
                 HeightRequest="600"
                 WidthRequest="800"
                 Source="http://localhost:4200"
                 Navigating="OnWebViewNavigating"
                 Navigated="OnWebViewNavigated" />
    </VerticalStackLayout>
</ContentPage>
